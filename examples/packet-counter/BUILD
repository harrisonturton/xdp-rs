load("@crate_index//:defs.bzl", "aliases", "all_crate_deps")
load("@rules_rust//rust:defs.bzl", "rust_binary")

rust_binary(
    name = "packet-counter",
    edition = "2021",
    srcs = glob([
        "src/**/*.rs",
    ]),
    aliases = aliases(),
    deps = [
      "//crates/bpf",
      "//crates/xdp",
      "//crates/xdp-sys",
      ":libelf",
      ":libbpf",
      ":libz",
    ] + all_crate_deps(),
    visibility = ["//visibility:public"],
)

cc_import(
    name = "libelf",
    deps = ["@libelf"],
    visibility = ["//visibility:public"],
)

cc_import(
    name = "libbpf",
    deps = ["@libbpf"],
    visibility = ["//visibility:public"],
)

cc_import(
    name = "libz",
    deps = ["@libz"],
    visibility = ["//visibility:public"],
)